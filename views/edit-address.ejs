<h2>Edit Address Form</h2>

<% if (typeof errors != 'undefined') { %>
    <ul style="background-color: red; color: white;">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/address/update" method="post">
    <input type="hidden" value="<%= address.oldName || address.name %>" name="oldName">
    <table>
        <tr>
            <td><label for="name">Full Name</label></td>
            <td>:</td>
            <td><input type="text" id="name" name="name" required value="<%= address.name %>"></td>
        </tr>
        <tr>
            <td><label for="phone">Phone Number</label></td>
            <td>:</td>
            <td><input type="text" id="phone" name="phone" required value="<%= address.phone %>"></td>
        </tr>
        <tr>
            <td><label for="email">Email</label></td>
            <td>:</td>
            <td><input type="email" id="email" name="email" required value="<%= address.email %>"></td>
        </tr>
        <tr>
            <td><label for="address">Address</label></td>
            <td>:</td>
            <td><input type="text" id="address" name="address" required value="<%= address.address %>"></td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td><button type="submit">Edit New Address</button></td>
        </tr>
    </table>
</form>